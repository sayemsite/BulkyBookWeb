@model BulkyBookWeb.Models.Member

@{
    ViewData["Title"] = "Member";
}

@*<h1>Create</h1>
*@


<div class="row mt-2">
    <div class="col-md-6 offset-3">
        <h1>Add or Edit Member</h1>
        <form asp-action="AddOrEdit" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
           @* <input type="hidden" asp-for="DateTime" />*@

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tel" class="control-label"></label>
                <input asp-for="Tel" class="form-control"/>
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>

            <div class="row mt-2">
            <div class="col-md-3">
               
                <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary w-100" />
                </div>
                                
            </div>
            <div class="col-md-3">

                <a asp-action="Index" class="btn btn-secondary w-100">View All</a>

            </div>
            </div>
            

            
        </form>
    </div>
</div>

